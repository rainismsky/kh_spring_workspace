<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="beauty">
	
	<!-- 1.게시글 전체 목록 조회 -->
	<select id="listAll" resultType="beauty.BoardVO">
		SELECT
		rno,
		mid,
		rfile,
		rcontents,
		r_regdate,
		r_grade,
		eid,
		ra_contents,
		ra_regdate
		FROM
		board
		ORDER BY
		rno desc,
		r_regdate desc
	</select>

	<!-- 2.게시글 작성 -->
	<insert id="insert">
		INSERT INTO review(
		bno,
		title,
		content,
		writer
		)VALUES(
		(SELECT NVL(MAX(bno)+1,1)FROM board),
		#{title},
		#{content},
		#{writer}
		)
	</insert>

	<!-- 3.게시글 상세보기 조회 -->
	<select id="view" resultType="board.BoardVO">
		SELECT * FROM board
		WHERE bno =
		#{bno}
	</select>

	<!-- 4.게시글 조회수 증가 -->
	<update id="increaseViewcnt">
		UPDATE board SET viewcnt = viewcnt+1
		WHERE bno =
		#{bno}
	</update>

	<!-- 5.게시글 수정 처리 -->
	<update id="updateArticle">
		UPDATE board SET
		title = #{title},
		content =
		#{content},
		writer = #{writer}
		WHERE bno =# {bno}
	</update>

	<!-- 6.게시글 삭제 -->
	<delete id="deleteArticle" parameterType="int">
		DELETE FROM board
		WHERE bno =# {bno}
	</delete>
</mapper>